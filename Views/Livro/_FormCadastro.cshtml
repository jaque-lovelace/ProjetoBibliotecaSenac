@model Livro
<div class="row justify-content-md-center">

    <form asp-action="Cadastro" method="POST" name="Cadastro" class="col-md-4">

        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Titulo">Titulo</label>
            <input name="Titulo" asp-for="Titulo" class="form-control" id="Titulo" required onblur="validaForm()"/>
        </div>
        <div class="form-group">
            <label asp-for="Autor">Autor</label>
            <input name="Autor" asp-for="Autor" class="form-control" id="Autor" required onblur="validaForm()"/>
        </div>
        <div>
            <label asp-for="Ano">Ano</label>
            <input name="Ano" asp-for="Ano" id="Ano" required onblur="validaForm()" />
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>